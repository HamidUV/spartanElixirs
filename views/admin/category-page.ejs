        <script>
            function handleDelete(categoryId) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: 'You won\'t be able to revert this!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Trigger the corresponding form submit
                        document.querySelector(`#form-${categoryId}`).submit();
                        // document.querySelector(`form[action='/admin/remove-category/${categoryId}']`).submit();
                    }
                });
            }
        </script>

            <table class="table">
