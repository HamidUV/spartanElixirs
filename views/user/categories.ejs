<% if(!userId) { %> <%- include('../layout/userLayout/userHeaderMini.ejs') %> <%
} else { %> <%- include('../layout/userLayout/userHeader.ejs') %> <% } %>

<div class="site-section">
  <div class="container">
    <div class="row">
      <a href="/" class="border-shadow" style="margin-left: 15px">
        <span class="text-gradient"
          ><i class="fa-solid fa-long-arrow-alt-left"></i>Go back
        </span>
      </a>

      <div class="col-md-12">

        <div class="row justify-content-center text-center mb-5">
          <div class="col-md-7 site-section-heading pt-4">
            <h2>Categories</h2>
          </div>
        </div>
        <div class="row">
          <% categoryData.forEach((category) => { %>
          <div
            class="col-sm-6 col-md-6 col-lg-4 mb-4 mb-lg-0"
            data-aos="fade"
            data-aos-delay=""
          >
            <a class="block-2-item" href="/category/<%= category.name %>">
              <figure class="image">
                <img
                  class="category-image"
                  src="/images/<%= category.image %>"
                />
            
              </figure>
              <div class="text">
                <span class="text-uppercase">Collections</span>
                <h3><%=category.name %></h3>
              </div>
            </a>
          </div>
        
          <% }); %>
        </div>

        <!-- </div> -->
      </div>
    </div>
  </div>
</div>

<style>
  .category-image {
    width: 21rem;
    height: 32rem;
  }
</style>

<%- include('../layout/userLayout/userFooter.ejs') %>
